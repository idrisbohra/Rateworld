<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
  
    <!-- view background color -->
    <solid
        android:color="#fff" >
    </solid>
    <stroke
          android:width="1dp"
          android:color="#fff" />
  
    <!-- If you want to add some padding -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"    >
    </padding>
  
    <!-- Here is the corner radius -->
    <corners
        android:radius="10dp"   >
    </corners>
  
</shape>